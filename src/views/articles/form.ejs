<%- include('../partials/header', { title: 'Article Management' }) %>
<div class="container">
  <h2><%= buttonText %> Article</h2>
  <a href="/articles" class="btn btn-secondary">Back to Articles</a>
  <form action="<%= action %>" method="POST">
    <div class="form-group">
      <label>Title:</label>
      <input type="text" name="title" value="<%= article.title || '' %>" required/>
    </div>
    <div class="form-group">
      <label>Author:</label>
      <input type="text" name="author" value="<%= article.author || '' %>" required/>
    </div>
    <div class="form-group">
      <label>URL:</label>
      <input type="url" name="url" value="<%= article.url || '' %>" required/>
    </div>
    <div class="form-group">
      <label>Content:</label>
      <textarea name="content" rows="5"><%= article.content || '' %></textarea>
    </div>
    <button type="submit" class="btn btn-primary"><%= buttonText %></button>
  </form>
</div>
<%- include('../partials/footer') %>