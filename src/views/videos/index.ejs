<%- include('../partials/header', { title: 'Video Management' }) %>

<div class="container">
  <h2>Videos</h2>
  <a href="/dashboard" class="btn">Back to Dashboard</a> |
  <a href="/videos/new" class="btn btn-primary">Create New Video</a>
  <hr>
  <% if (!videos || videos.length === 0) { %>
    <p>No videos found.</p>
  <% } else { %>
    <ul>
      <% videos.forEach(video => { %>
        <li>
          <strong>
            <a href="/videos/<%= video._id %>"><%= video.title %></a>
          </strong> - <small><%= new Date(video.createdAt).toLocaleDateString() %></small>
          <a href="/videos/edit/<%= video._id %>" class="btn btn-sm btn-warning">Edit</a>
          <form action="/videos/delete/<%= video._id %>" method="POST" style="display:inline;">
            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
          </form>
        </li>
      <% }); %>
    </ul>
  <% } %>
</div>

<%- include('../partials/footer') %>
