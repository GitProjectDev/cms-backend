
<%- include('../partials/header', { title: 'Gallery Details' }) %>
<div class="container">
  <h2><%= gallery.title %></h2>
  <p><small>Created on: <%= new Date(gallery.createdAt).toLocaleDateString() %></small></p>
  <% if (gallery.description) { %>
    <p><strong>Description:</strong> <%= gallery.description %></p>
  <% } %>
  <div class="image-preview">
    <img src="<%= gallery.imageUrl %>" alt="<%= gallery.title %>" class="img-fluid">
  </div>
  <a href="/galleries" class="btn btn-secondary">Back to Gallery</a>
</div>
<%- include('../partials/footer') %>