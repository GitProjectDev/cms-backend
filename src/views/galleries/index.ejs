<!DOCTYPE html>
<html>
<head>
  <title>Gallery Management</title>
</head>
<body>
  <h2>Gallery</h2>
  <a href="/dashboard">Back to Dashboard</a> |
  <a href="/galleries/new">Add New Image</a>
  <hr>
  <% if (!galleries || galleries.length === 0) { %>
    <p>No images found.</p>
  <% } else { %>
    <ul>
      <% galleries.forEach(gallery => { %>
        <li>
          <strong><%= gallery.title %></strong> - 
          <small><%= new Date(gallery.createdAt).toLocaleDateString() %></small>
          <img src="<%= gallery.imageUrl %>" alt="<%= gallery.title %>" width="100">
          <a href="/galleries/edit/<%= gallery._id %>">Edit</a>
          <form action="/galleries/delete/<%= gallery._id %>" method="POST" style="display:inline;">
            <button type="submit">Delete</button>
          </form>
        </li>
      <% }); %>
    </ul>
  <% } %>
</body>
</html>
