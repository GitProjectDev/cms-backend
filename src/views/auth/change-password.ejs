<%- include('../partials/header', { title: 'Change Password' }) %>

<main class="container">
    <h2>Change Password</h2>

    <!-- Display success/error messages -->
    <% if (success && success.length > 0) { %>
        <% success.forEach(msg => { %>
            <div class="alert alert-success"><%= msg %></div>
        <% }); %>
    <% } %>
    <% if (error && error.length > 0) { %>
        <% error.forEach(msg => { %>
            <div class="alert alert-error"><%= msg %></div>
        <% }); %>
    <% } %>

    <!-- Change Password Form -->
    <div class="form-container">
        <form class="form" action="/auth/change-password" method="POST">
            <div class="form-group">
                <label for="oldPassword">Old Password:</label>
                <input type="password" id="oldPassword" name="oldPassword" required placeholder="Enter your old password">
            </div>
            <div class="form-group">
                <label for="newPassword">New Password:</label>
                <input type="password" id="newPassword" name="newPassword" required placeholder="Enter a new password">
            </div>
            
            <button class="btn btn-primary" type="submit">Change Password</button>
        </form>
    </div>
</main>

<%- include('../partials/footer') %>
